<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

  <id>release</id>
  <baseDirectory>${project.baseName}-${project.version}</baseDirectory>
  <includeBaseDirectory>true</includeBaseDirectory>
  <formats>
    <format>dir</format>
    <format>zip</format>
    <format>tar.gz</format>
    <!--<format>tar.bz2</format>-->
  </formats>

  <files>
    <file>
      <source>${project.basedir}/LICENSE.txt</source>
      <destName>doc/licenses/OpenEstate-Tool-Server.license.txt</destName>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/runtime</directory>
      <outputDirectory></outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
      <excludes>
        <exclude>bin/*.sh</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/runtime</directory>
      <outputDirectory></outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <filtered>false</filtered>
      <includes>
        <include>bin/*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/runtime</directory>
      <outputDirectory></outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/share/icons</directory>
      <outputDirectory>var/icons</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
      <includes>
        <include>*.icns</include>
        <include>*.ico</include>
        <include>*.png</include>
      </includes>
    </fileSet>

    <!-- launcher for macOS -->
    <fileSet>
      <directory>${basedir}/share/mac-application-bundles/Start.app</directory>
      <outputDirectory>Start.app</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
      <excludes>
        <exclude>**/MacOS/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/share/mac-application-bundles/Start.app</directory>
      <outputDirectory>Start.app</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <filtered>false</filtered>
      <includes>
        <include>**/MacOS/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/share/mac-application-bundles/ManagerTool.app</directory>
      <outputDirectory>ManagerTool.app</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
      <excludes>
        <exclude>**/MacOS/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/share/mac-application-bundles/ManagerTool.app</directory>
      <outputDirectory>ManagerTool.app</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <filtered>false</filtered>
      <includes>
        <include>**/MacOS/*</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <scope>runtime</scope>
      <excludes>
        <exclude>com.google.code.findbugs:*</exclude>
        <exclude>net.jcip:*</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>doc/javadoc</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>true</useProjectAttachments>
      <includes>
        <include>${project.groupId}:${project.artifactId}:*:javadoc</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>doc/sources</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>true</useProjectAttachments>
      <includes>
        <include>${project.groupId}:${project.artifactId}:*:sources</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>