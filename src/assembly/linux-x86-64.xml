<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>${project.baseName}</id>
    <baseDirectory>${project.baseName}</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <format>dir</format>
    </formats>

    <files>
        <file>
            <source>${project.basedir}/LICENSE.txt</source>
            <destName>share/licenses/${project.baseName}.license.txt</destName>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <lineEnding>unix</lineEnding>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/unix</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/systemd</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/etc</directory>
            <outputDirectory>etc</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/systemd</directory>
            <outputDirectory>etc/systemd</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <lineEnding>unix</lineEnding>
            <excludes>
                <exclude>*.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/licenses</directory>
            <outputDirectory>share/licenses</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/icons</directory>
            <outputDirectory>share/icons</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <includes>
                <include>*.png</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependencies</directory>
            <outputDirectory>share</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <excludes>
                <exclude>**/commons-daemon-*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/openjdk/runtime/linux-x86-64</directory>
            <outputDirectory>jre</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <scope>runtime</scope>
            <excludes>
                <exclude>com.google.code.findbugs:*</exclude>
                <exclude>net.jcip:*</exclude>
                <exclude>commons-daemon:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>share/javadoc</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useProjectAttachments>true</useProjectAttachments>
            <includes>
                <include>${project.groupId}:${project.artifactId}:*:javadoc:${project.version}</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>share/sources</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useProjectAttachments>true</useProjectAttachments>
            <includes>
                <include>${project.groupId}:${project.artifactId}:*:sources:${project.version}</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>