<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>OpenEstate-ImmoServer</id>
    <baseDirectory>OpenEstate-ImmoServer.app</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <format>dir</format>
    </formats>

    <files>
        <file>
            <source>${project.basedir}/LICENSE.txt</source>
            <destName>Contents/Resources/share/licenses/OpenEstate-ImmoServer.license.txt</destName>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
        </file>
    </files>

    <fileSets>
        <!-- Main Application Launcher for Mac OS X -->
        <fileSet>
            <directory>${project.basedir}/src/mac/OpenEstate-ImmoServer.app</directory>
            <outputDirectory></outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <excludes>
                <exclude>**/MacOS/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/mac/OpenEstate-ImmoServer.app</directory>
            <outputDirectory></outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
            <includes>
                <include>**/MacOS/*</include>
            </includes>
        </fileSet>

        <!-- Start-Launcher for Mac OS X -->
        <fileSet>
            <directory>${project.basedir}/src/mac/Start.app</directory>
            <outputDirectory>Contents/MacOS/OpenEstate-ImmoServer/Start.app</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <excludes>
                <exclude>**/MacOS/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/mac/Start.app</directory>
            <outputDirectory>Contents/MacOS/OpenEstate-ImmoServer/Start.app</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
            <includes>
                <include>**/MacOS/*</include>
            </includes>
        </fileSet>

        <!-- Resources -->
        <fileSet>
            <directory>${project.basedir}/src/unix</directory>
            <outputDirectory>Contents/Resources/bin</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/etc</directory>
            <outputDirectory>Contents/Resources/etc</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/licenses</directory>
            <outputDirectory>Contents/Resources/share/licenses</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/icons</directory>
            <outputDirectory>Contents/Resources/share/icons</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <includes>
                <include>*.icns</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependencies</directory>
            <outputDirectory>Contents/Resources/share</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <excludes>
                <exclude>**/commons-daemon-*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/openjdk/runtime/mac64</directory>
            <outputDirectory>Contents/Resources/jre</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>Contents/Resources/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <scope>runtime</scope>
            <excludes>
                <exclude>com.google.code.findbugs:*</exclude>
                <exclude>net.jcip:*</exclude>
                <exclude>commons-daemon:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>Contents/Resources/share/javadoc</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useProjectAttachments>true</useProjectAttachments>
            <includes>
                <include>${project.groupId}:${project.artifactId}:*:javadoc</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>Contents/Resources/share/sources</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useProjectAttachments>true</useProjectAttachments>
            <includes>
                <include>${project.groupId}:${project.artifactId}:*:sources</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>